# AJAAS Configuration
# Copy this file to .env and edit as needed.
# Environment variables always take precedence over values in this file.
# To use a custom path, set ENV_FILE=/path/to/your.env

# Server
PORT=3000
HOST=0.0.0.0

# Features
WEB_ENABLED=true
SCHEDULE_ENABLED=true
SECURITY_ENABLED=false
TOUGH_LOVE_ENABLED=true

# Security (required if SECURITY_ENABLED=true or SCHEDULE_ENABLED=true)
# Must be at least 32 characters
ENCRYPTION_KEY=your-32-character-secret-key-here!!!

# Database
# Use :memory: for in-memory or a path like ./data/ajaas.db
DB_PATH=:memory:

# Rate Limiting (optional, disabled by default)
# Useful for public deployments; can be handled externally in K8s/cloud
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# Google Analytics (optional, for web landing page)
# Set your GA4 Measurement ID to enable tracking on the web UI
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Email (optional, for scheduled message delivery)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-username
# SMTP_PASS=your-password
# SMTP_FROM=ajaas@example.com
