# Server
PORT=3000
HOST=0.0.0.0

# Features
WEB_ENABLED=true
SCHEDULE_ENABLED=true
SECURITY_ENABLED=false
TOUGH_LOVE_ENABLED=true

# Security (required if SECURITY_ENABLED=true or SCHEDULE_ENABLED=true)
# Must be at least 32 characters
ENCRYPTION_KEY=your-32-character-secret-key-here!!!

# Database
# Use :memory: for in-memory or a path like ./data/ajaas.db
DB_PATH=:memory:

# Email (optional, for scheduled message delivery)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-username
# SMTP_PASS=your-password
# SMTP_FROM=ajaas@example.com
