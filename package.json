{
  "name": "ajaas",
  "version": "0.1.1",
  "description": "Awesome Job As A Service - wholesome compliments API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:web": "npm --prefix src/web run dev",
    "build": "tsc && npm --prefix src/web run build",
    "build:api": "tsc",
    "build:web": "npm --prefix src/web run build",
    "start": "node dist/index.js",
    "generate-key": "tsx scripts/generate-key.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "postinstall": "cd src/web && npm ci"
  },
  "keywords": [
    "ajaas",
    "api",
    "compliments",
    "awesome",
    "foaas"
  ],
  "license": "MIT",
  "dependencies": {
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^8.0.4",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.1",
    "better-sqlite3": "^11.7.0",
    "croner": "^9.0.0",
    "fastify": "^5.2.1",
    "nodemailer": "^7.0.13",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.12.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.16.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  }
}
