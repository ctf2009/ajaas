{
  "name": "ajaas",
  "version": "0.1.1",
  "description": "Awesome Job As A Service - wholesome compliments API",
  "type": "module",
  "main": "dist/entrypoints/node.js",
  "scripts": {
    "dev": "tsx watch src/entrypoints/node.ts",
    "dev:web": "npm --prefix src/web run dev",
    "build": "tsc && npm --prefix src/web run build",
    "build:api": "tsc",
    "build:web": "npm --prefix src/web run build",
    "start": "node dist/entrypoints/node.js",
    "dev:worker": "wrangler dev",
    "deploy:worker": "wrangler deploy",
    "deploy:worker:full": "npm run build:web && wrangler deploy",
    "deploy:worker:domain": "npm run build:web && wrangler deploy --domain your-domain.example.com",
    "generate-key": "tsx scripts/generate-key.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "postinstall": "cd src/web && npm ci"
  },
  "keywords": [
    "ajaas",
    "api",
    "compliments",
    "awesome",
    "foaas"
  ],
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/swagger-ui": "^0.5.3",
    "better-sqlite3": "^11.7.0",
    "croner": "^9.0.0",
    "hono": "^4.11.9",
    "nodemailer": "^7.0.13",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260210.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.12.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.64.0"
  }
}
